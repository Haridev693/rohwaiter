<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblNameProduct"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="COCA COLA LATA"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lblNumBerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblNameProduct"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lblCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:text="100"
            android:textColor="#000000"
            android:textSize="22dp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="2,50$"
            android:textColor="#000000"
            android:textSize="22dp" />

        <Button
            android:id="@+id/imgAddProduct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_plus" />

        <Button
            android:id="@+id/btnRemoveProduct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/imgAddProduct"
            android:layout_alignBottom="@+id/imgAddProduct"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imgAddProduct"
            android:background="@drawable/ic_minus" />

    </RelativeLayout>

</LinearLayout>