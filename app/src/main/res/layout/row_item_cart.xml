<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgCheckTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgCart"
            android:layout_alignTop="@+id/imgCart"
            android:background="@drawable/ic_check_true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnReduction"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_minus" />

        <TextView
            android:id="@+id/lblNameCart"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="CoCa Cola"
            android:textColor="#000000"
            android:textSize="22dp" />

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnInsumos"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lblNameCart"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_addnotesmall"
            />

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnIncrease"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignRight="@+id/btnInsumos"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_plus" />
       
        <TextView
            android:id="@+id/lblNumberCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="83dp"
            android:layout_toLeftOf="@+id/btnIncrease"
            android:layout_marginRight="1dp"
            android:text="01"
            android:textColor="#000000"
            android:textSize="20dp" />
       
        <TextView
            android:id="@+id/lblTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnIncrease"
            android:layout_marginRight="10dp"
            android:text="20$"
            android:textColor="#64aeff"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="10$"
            android:textColor="#000000"
            android:textSize="22dp" />
    </RelativeLayout>

</LinearLayout>