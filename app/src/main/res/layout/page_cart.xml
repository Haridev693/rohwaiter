<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_Cartnodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="You have not selected dish"
        android:textColor="@color/yellow"
        android:textSize="25dp" />


    <!--android:background="#ed1c24"-->

    <RelativeLayout
        style="@style/Layout.FillWidth"
        android:layout_height="50dp"
        android:background="#faf741"
        android:gravity="center_vertical" >

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btn_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/home_back_round" />

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnBackCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/lblTitleCart"
            style="@style/Layout.FillWidth"
            android:layout_alignBottom="@+id/btn_home"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Table1"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lsvCart"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="55dp"
        android:background="#ffffff" >
    </ListView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffff" >

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnOrder"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_order" />

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnDelete"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_delete" />

        <com.shss.restaurantwaiter.widget.AutoBgButton
            android:id="@+id/btnAccount"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_account" />


        <TextView
            android:id="@+id/lblTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnOrder"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_alignRight="@+id/btnOrder"
            android:text="ABCD"
            android:textColor="@color/color_button_blue"
            android:textSize="25dp" />
    </RelativeLayout>

</RelativeLayout>